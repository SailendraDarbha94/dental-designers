---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="John Doe's Project"
  seoTitle="Projects with React, Astro"
  seoDesc="Award winning projects/app with Astro, React and NextJS"
>
  <div class="w-8/12 lg:w-6/12 mx-auto">
    <h1 class="text-5xl my-4 text-center">Dr. Developer's Blog</h1>
    <div
      class="grid md:grid-cols-2 gap-2 drop-shadow-[0px_35px_35px_rgba(39,245,131,0.6)]"
    >
    <a href="/blogs/modern">
        <img
          class="rounded border-red-500 border-b-2"
          src="/public/modern.png"
          width="300px"
          height="300px"
        />
        <h3 class="text-center text-xl underline p-2">Mc Donalds Sucks Now</h3>
    </a>
    <a href="/blogs/bloodbender">
        <img
          class="rounded"
          src="/public/bloodbender.png"
          width="300px"
          height="300px"
        />
        <h3 class="text-center text-xl underline p-2">Another Blog</h3>
    </a>
    </div>
  </div>
</MainLayout>
